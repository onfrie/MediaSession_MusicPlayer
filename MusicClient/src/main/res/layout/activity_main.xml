<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C3E50"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- 标题区域 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="音乐接收端"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- 专辑封面区域 -->
    <ImageView
        android:id="@+id/iv_album"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="#34495E"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_media_play" />

    <!-- 歌曲信息 -->
    <TextView
        android:id="@+id/tv_song_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_album"
        android:layout_marginBottom="8dp"
        android:text="等待连接..."
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/tv_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_song_title"
        android:layout_marginBottom="24dp"
        android:text="未知歌手"
        android:textColor="#BDC3C7"
        android:textSize="16sp"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- 进度条区域 -->
    <LinearLayout
        android:id="@+id/progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_artist"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:max="1000"
            android:progressTint="#3498DB"
            android:thumbTint="#3498DB" />

        <TextView
            android:id="@+id/tv_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- 播放状态 -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_container"
        android:layout_marginBottom="16dp"
        android:text="未连接"
        android:textColor="#E74C3C"
        android:textSize="14sp"
        android:gravity="center" />

    <!-- 控制按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_status"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_previous"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="32dp"
            android:src="@android:drawable/ic_media_previous"
            android:background="@android:color/transparent"
            android:tint="#FFFFFF"
            android:scaleType="centerInside"
            android:contentDescription="上一首" />

        <ImageButton
            android:id="@+id/btn_play_pause"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="32dp"
            android:src="@android:drawable/ic_media_play"
            android:background="@android:color/transparent"
            android:tint="#E74C3C"
            android:scaleType="centerInside"
            android:contentDescription="播放/暂停" />

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@android:drawable/ic_media_next"
            android:background="@android:color/transparent"
            android:tint="#FFFFFF"
            android:scaleType="centerInside"
            android:contentDescription="下一首" />

    </LinearLayout>

    <!-- 调试信息区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_status"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="等待连接音乐播放器..."
            android:textColor="#95A5A6"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:padding="8dp" />
    </ScrollView>

</RelativeLayout>